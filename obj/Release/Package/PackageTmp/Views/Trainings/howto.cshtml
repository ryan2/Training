                        DateTime first = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
                        DateTime last = new DateTime(DateTime.Today.Year, DateTime.Today.Month, daysinmonth);
                        int lastday = (int)(last.DayOfWeek + 6) % 7;
                        int firstday = (int)(first.DayOfWeek + 6) % 7;
                        int weeks = 5;
