		<!-- Content -->
			<div id="content">
				<div class="inner">
                    @{int page1 = ViewBag.page * 3; }
                    @foreach (var item in Model.Skip(page1).Take(3))
                    {
					<!-- Post -->
						<article class="box post post-excerpt">
							<header>
								<!--
									Note: Titles and subtitles will wrap automatically when necessary, so don't worry
									if they get too long. You can also remove the <p> entirely if you don't
									need a subtitle.
								-->
								<h2>@item.Topic</h2>
								<p>@item.Course</p>
                                <p>@item.Location</p>
							</header>
							<div class="info">
								<!--
									Note: The date should be formatted exactly as it's shown below. In particular, the
									"least significant" characters of the month should be encapsulated in a <span>
									element to denote what gets dropped in 1200px mode (eg. the "uary" in "January").
									Oh, and if you don't need a date for a particular page or post you can simply delete
									the entire "date" element.

								-->
                                @{ string day = "";
                                    string year = "";
                                    string month = "";
                                    string month2 = "";
                                    DateTime d = (DateTime)item.Date;
                                    day = d.Day.ToString();
                                    year = ", " + d.Year.ToString();
                                    month = d.ToString("MMMM") + " ";
                                    month2 = month.Substring(2);
                                    month = month.Substring(0, 2);
                                        }
								<span class="date"><span class="month">@month<span>@month2</span></span> <span class="day">@day</span><span class="year">@year</span></span>
								<!--
									Note: You can change the number of list items in "stats" to whatever you want.
								-->
								<ul class="stats">
                                    @{ int star = (int)item.Stars;
                                        int max = 5;
                                        }
                                    @while (star-- > 0)
                                    {
                                        max--;
                                    <li style="margin-top:0px; margin-bottom:0px" class="icon fa-star"></li>
                                    }
                                    @while (max-- > 0)
                                    {
                                        <li style="margin-top:0px; margin-bottom:0px" class="icon fa-star-o"></li>
                                    }
								</ul>
                                <a class="stats url" href="//@item.Url">@item.Url</a>
                                <br />
                                <p style="display:inline">Office: @item.Office</p>
                                <p class="stats">Role: @item.Role</p>
                                <p class="stats">Format: @item.Format</p>
                                <p class="stats">Duration: @item.Time</p>
                                <p class="stats">Continuing Education Units: @item.CEU</p>
                                <p class="stats">Contractor: @item.Contractor</p>
                                <p class="stats">Instructor: @item.Instructor</p>
							</div>
							<!--<a href="#" class="image featured"><img src="~/Content/striped/images/pic01.jpg" alt="" /></a>-->
							<p>
								<b>Comments:</b> @item.Review
							</p>
						</article>
                    <br />
                                        }

					<!-- Pagination -->
						<div class="pagination">
							<!--<a href="#" class="button previous">Previous Page</a>-->
							<div class="pages">
                                @{ int total = Model.Count();
                                    int pages = (total + 2) / 3;
                                    int totalpages = pages;
                                    int i = 1;}
                                @while (pages > 0)
                                {
                                    if (i == ViewBag.page + 1)
                                    {<a href="#" class="active">@i</a>}
                                    else {
                                        @Html.ActionLink(@i.ToString(), "Index1", new { sortOrder = ViewBag.currentSort, searchString = ViewBag.search, trainingRating = ViewBag.rating, page = @i - 1 })
                                    }
                                    i++;
                                    pages--;
                                }
							</div>
                            @if (ViewBag.page+1 < totalpages) { 
							    @Html.ActionLink("Next Page", "Index1", new { sortOrder = ViewBag.currentSort, searchString = ViewBag.search, trainingRating = ViewBag.rating, page = ViewBag.page+1 }, htmlAttributes: new { @class = "button" }) }
						</div>

				</div>
