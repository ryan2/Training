				<!-- Calendar -->
                <section class="box calendar">
                    <div class="inner">
                        <table>
                            @{ string m = mfi.GetMonthName(DateTime.Today.Month);
                                string y = DateTime.Today.Year.ToString();
                                string z = m + " " + y;
                                int daysinmonth = DateTime.DaysInMonth(DateTime.Today.Year, DateTime.Today.Month);
                                DateTime first = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);
                                DateTime last = new DateTime(DateTime.Today.Year, DateTime.Today.Month, daysinmonth);
                                int lastday = (int)(last.DayOfWeek + 6) % 7;
                                int firstday = (int)(first.DayOfWeek + 6) % 7;
                                int weeks = 5;
                                if (((daysinmonth == 30 || daysinmonth == 31) && firstday == 6) || (daysinmonth == 31 && firstday == 5))
                                {
                                    weeks = 6;
                                }
                                int skipfirst = firstday;
                                int skiplast = 6 - lastday;
                                int daycount = 1;
                                int k = 0;
                                int today = DateTime.Today.Day;
                            }
                            <caption>@z</caption>
                            <thead>
                                <tr>
                                    <th scope="col" title="Monday">M</th>
                                    <th scope="col" title="Tuesday">Tu</th>
                                    <th scope="col" title="Wednesday">W</th>
                                    <th scope="col" title="Thursday">T</th>
                                    <th scope="col" title="Friday">F</th>
                                    <th scope="col" title="Saturday">S</th>
                                    <th scope="col" title="Sunday">Su</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    @while (skipfirst > 0)
                                    {
                                        <td><span>&nbsp;</span></td>
                                        skipfirst--;
                                    }
                                    @while (firstday < 7)
                                    {
                                        if (today == daycount)
                                        {
                                            <td class="today"><a>@daycount</a></td>
                                            daycount++;
                                            firstday++;
                                            continue;
                                        }
                                        <td><span>@daycount</span></td>
                                        daycount++;
                                        firstday++;
                                    }
                                </tr>
                                <tr>
                                    @while (k++ < 7)
                                    {
                                        if (today == daycount)
                                        {
                                            <td class="today"><a>@daycount</a></td>
                                            daycount++;
                                            continue;
                                        }
                                        <td><span>@daycount</span></td>
                                        daycount++;
                                    }
                                </tr>
                                <tr>
                                    @{k = 0; }
                                    @while (k++ < 7)
                                    {
                                        if (today == daycount)
                                        {
                                            <td class="today"><a>@daycount</a></td>
                                            daycount++;
                                            continue;
                                        }
                                        <td><span>@daycount</span></td>
                                        daycount++;
                                    }
                                </tr>
                                <tr>
                                    @{k = 0; }
                                    @while (k++ < 7)
                                    {
                                        if (today == daycount)
                                        {
                                            <td class="today"><a>@daycount</a></td>
                                            daycount++;
                                            continue;
                                        }
                                        <td><span>@daycount</span></td>
                                        daycount++;
                                    }
                                </tr>
                                <tr>
                                    @if (weeks == 6)
                                    {
                                        k = 0;
                                        while (k++ < 7)
                                        {
                                            if (today == daycount)
                                            {
                                                <td class="today"><a>@daycount</a></td>
                                                daycount++;
                                                continue;
                                            }
                                            <td><span>@daycount</span></td>
                                            daycount++;
                                        }
                                    }
                                    else
                                    {
                                        while (daycount <= daysinmonth)
                                        {
                                            if (today == daycount)
                                            {
                                                <td class="today"><a>@daycount</a></td>
                                                daycount++;
                                                continue;
                                            }
                                            <td><span>@daycount</span></td>
                                            daycount++;
                                        }
                                        while (skiplast > 0)
                                        {
                                            <td><span>&nbsp;</span></td>
                                            skiplast--;
                                        }
                                    }

                                </tr>
                                @if (weeks == 6)
                                {
                                    <tr>
                                        @while (daycount <= daysinmonth)
                                        {
                                            if (today == daycount)
                                            {
                                                <td class="today"><a>@daycount</a></td>
                                                daycount++;
                                                continue;
                                            }
                                            <td><span>@daycount</span></td>
                                            daycount++;
                                        }
                                        @while (skiplast > 0)
                                        {
                                            <td><span>&nbsp;</span></td>
                                            skiplast--;
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
