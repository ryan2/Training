					<!-- Pagination -->
						<div class="pagination">
							<!--<a href="#" class="button previous">Previous Page</a>-->
							<div class="pages">
                                @{ int total = Model.Count();
                                    int pages = (total + 4) / 5;
                                    int totalpages = pages;
                                    int i = 1;}
                                @while (pages > 0)
                                {
                                    if (i == ViewBag.page + 1)
                                    {<a href="#" class="active">@i</a>}
                                    else {
                                        @Html.ActionLink(@i.ToString(), "Index", new { sortOrder = ViewBag.currentSort, searchString = ViewBag.search, trainingRating = ViewBag.rating, page = @i - 1 })
                                    }
                                    i++;
                                    pages--;
                                }
							</div>
                            @if (ViewBag.page + 1 < totalpages) {
							    @Html.ActionLink("Next Page", "Index", new { sortOrder = ViewBag.currentSort, searchString = ViewBag.search, trainingRating = ViewBag.rating, page = ViewBag.page + 1 }, htmlAttributes: new { @class = "button" }) }
						</div>

				</div>
